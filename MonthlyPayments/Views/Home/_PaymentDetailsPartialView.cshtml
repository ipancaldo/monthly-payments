<div class="modal fade" id="paymentDetails" aria-labelledby="paymentDetailsLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <section style="background-color: #eee;">
                    <div class="row justify-content-center">
                        <div class="col-md-8 col-lg-10 col-xl-10">
                            <div class="card text-black">
                            <i class="fab fa-apple fa-lg pt-3 pb-1 px-3"></i>
                                <div class="card-body">
                                    <div class="text-center">
                                        <h5 class="card-title">Grocery resume</h5>
                                        <p class="text-muted mb-4">Detail:</p>
                                    </div>
                                    <div>
                                        <div class="d-flex justify-content-between">
                                            <span>Credit Card</span><span>@ViewBag.Grocery.CreditCard kr</span>
                                        </div>
                                        <div class="d-flex justify-content-between">
                                            <span>Cash / Debit</span><span>@ViewBag.Grocery.CashDebit kr</span>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-between total font-weight-bold mt-4">
                                        <span>Total</span><span>@ViewBag.Grocery.TotalSpent kr</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </section>
        </div>
    </div>
</div>