@using MonthlyPayments.Domain;
@{
    ViewData["Title"] = "Home Page";
}
@model Grocery

<div class="text-center">
    <h1 class="display-4">Groceries</h1>

    <div class="pt-2">
        <span>How much did you spend?</span>
        <form method="post" action="@Url.Action("UpdatePayment", "Home")">
            <input type="text" name="quantity" id="quantitySpent" required />
            <br>
            <label class="pt-2">
                <input class="form-check-input" type="radio" name="isCreditCard" value="true" required> Credit card
            </label>
            <br>
            <label>
                <input class="form-check-input" type="radio" name="isCreditCard" value="false" required> Cash / Debit
            </label>
            <br>
            <button class="btn btn-outline-primary mt-2" type="submit">Add</button>
        </form>
    </div>

    <div class="pt-5">
        <p>Payments so far:</p>
        <p><span id="paid">@Model.TotalSpent</span> kr</p>
    </div>

    <button type="button" class="btn btn-outline-warning" data-toggle="modal" data-target="#paymentDetails" data-url="@Url.Action("PaymentDetails", "Home")">Details</button>
    @await Html.PartialAsync("_PaymentDetailsPartialView")

    <div class="pt-5">
        <p>Last payment added:</p>
        <p class="last-date-payment-added">@Model.LastUpdate</p>
    </div>
</div>